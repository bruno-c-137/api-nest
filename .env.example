# Database
DATABASE_URL="postgresql://user:password@localhost:5432/conversation_db"

# Server
PORT=3000

# Tavus API Configuration
TAVUS_API_KEY="your_tavus_api_key_here"
TAVUS_BASE_URL="https://tavusapi.com"
TAVUS_PERSONA_ID="your_default_persona_id"
TAVUS_REPLICA_ID="your_default_replica_id"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Webhook Configuration
# URL pública onde a API está rodando (use ngrok em desenvolvimento)
# Exemplo: https://abc123.ngrok.io/webhooks/tavus
WEBHOOK_BASE_URL="http://localhost:3000"

# Redis Configuration (Cache)
# Local: localhost (use Docker: docker run -d -p 6379:6379 redis:alpine)
# Railway: Preencha com os valores do Redis do Railway
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=300
